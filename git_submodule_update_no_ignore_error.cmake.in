execute_process(COMMAND
    git submodule update --init --recursive
    RESULT_VARIABLE res_var ERROR_QUIET
    WORKING_DIRECTORY "${CMAKE_CURRENT_SOURCE_DIR}")
if(NOT "${res_var}" STREQUAL "0")
  message(STATUS "ignoring git submodule update --init --recursive problem "
    "with error code '${res_var}'")
endif()